{
    "name": "streamdeck-sonos",
    "version": "1.1.0",
    "scripts": {
        "build": "rollup -c",
        "watch": "rollup -c -w --watch.onEnd=\"streamdeck restart com.pavel-karpovich.sonos\"",
        "validate": "streamdeck validate com.pavel-karpovich.sonos.sdPlugin",
        "pack": "streamdeck bundle com.pavel-karpovich.sonos.sdPlugin",
        "test": "streamdeck -v"
    },
    "type": "module",
    "devDependencies": {
        "@elgato/cli": "^1.7.0",
        "@rollup/plugin-commonjs": "^29.0.0",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^16.0.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.3.0",
        "@tsconfig/node24": "^24.0.4",
        "@types/node": "~25.0.9",
        "prettier": "^3.8.0",
        "rollup": "^4.55.3",
        "tslib": "^2.8.1",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@elgato/streamdeck": "^2.0.1",
        "@svrooij/sonos": "^2.5.0",
        "axios": "^1.13.2"
    }
}
